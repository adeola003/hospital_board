<div class="container mt-3">
  <div class="row">
    <div class="col-md-12">
      <p class="alert alert-success"><%= notice %></p>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <%= render @patient %>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col-md-12">
      <div class="btn-group" role="group">
        <%= link_to "Edit this patient", edit_patient_path(@patient), class: "btn btn-primary mr-2" %>
        <%= link_to "Back to patients", patients_path, class: "btn btn-secondary mr-2" %>
        <%= button_to "Destroy this patient", @patient, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
      </div>
    </div>
  </div>
</div>
